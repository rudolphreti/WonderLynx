@using API
@model HomeVm.IndexViewModel

<h1>Reference Items</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Subtitle</th>
            <th>Type</th>
            <th>Category</th>
            <th>Tags</th>
            <th>Description</th>
            <th>Thumbnail</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ReferenceItems)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Subtitle</td>
                <td>@item.Type</td>
                <td>@item.Category</td>
                <td>
                    @* @item.Tags *@
                    </td>
                <td>@item.Description</td>
                <td><img src="@item.ThumbnailUrl" alt="Thumbnail" style="width: 50px; height: 50px;" /></td>
                <td>
                    <a href="@Url.Action("Edit", "Home", new { id = item.ReferenceId })" class="btn btn-warning">Bearbeiten</a>
                    <form asp-action="Delete" asp-controller="Home" asp-route-id="@item.ReferenceId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
