@model App.Models.ReferenceItem

<h2>Edit reference</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ReferenceId" />

    <div class="form-group">
        <label asp-for="ThumbnailUrl">Thumbnail</label>
        <input asp-for="ThumbnailUrl" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Subtitle">Subtitle</label>
        <input asp-for="Subtitle" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TypeName">Type</label>
        <input asp-for="TypeName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CategoryName">Categories</label>
        <input asp-for="CategoryName" class="form-control" />
    </div>
    @if (Model.Tags != null && ViewBag.AvailableTags != null)
    {
        <div class="form-group">
            <label for="Tags">Tags</label>
            <select id="Tags" name="selectedTags" class="form-control" multiple>
                @foreach (var tag in ViewBag.AvailableTags)
                {
                    @if (Model.Tags != null && Model.Tags.Contains(tag.Name))
                    {       
                        <option value=@tag.TagId selected>@tag.Name</option>
                    } else
                    {
                        <option value=@tag.TagId>@tag.Name</option>
                    }
                }
            </select>
        </div>
    }

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
